
{
"manifest_version": 2,
  "name": "Craft",
  "description": "Craft",
  "version": "12",
 "minimum_chrome_version": "27",
  "offline_enabled": true,

  "app": {

	"background": {
	  "persistent": true,
      "scripts": ["view-source"]
    }
  },
  "icons": {
    "128": "Preview128.png"

  },
  

  "permissions": [
  "webview",
  "fullscreen",
  "pointerLock",
    "unlimitedStorage",
	    "notifications",
		    "storage",
    {
      "socket": ["udp-send-to", "udp-bind", "udp-multicast-membership", "tcp-connect", "tcp-listen"]
    }
  ]

}