{
"manifest_version": 2,
  "name": "ChromeNotificationExperiment",
  "description": "ChromeNotificationExperiment",
  "version": "8",
 "minimum_chrome_version": "27",
  "offline_enabled": true,

  "app": {

	"background": {
      "scripts": ["main.js"]
    }
  },
  "icons": {
    "16": "Preview16.png",
    "128": "Preview128.png"
  },
  
  
  "permissions": [
  "fullscreen",
  "pointerLock",
    "unlimitedStorage",
	    "notifications",
		    "storage",
    {
      "socket": ["udp-send-to", "udp-bind", "udp-multicast-membership"]
    }
  ]

}