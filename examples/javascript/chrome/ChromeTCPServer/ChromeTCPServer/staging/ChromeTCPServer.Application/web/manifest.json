
{
"manifest_version": 2,
  "name": "ChromeTCPServer",
  "description": "ChromeTCPServer",
  "version": "12",
 "minimum_chrome_version": "27",
  "offline_enabled": true,

     "externally_connectable": {
    "ids": [
      "*"
		]
	},

  "app": {

	"background": {
	  "persistent": true,
      "scripts": ["view-source"]
    }
  },
  "icons": {
  },
  

  "permissions": [
  "<all_urls>",
  "webview",
  "fullscreen",
  "pointerLock",
    "unlimitedStorage",
	    "notifications",
		    "storage",
    {
      "socket": ["udp-send-to", "udp-bind", "udp-multicast-membership", "tcp-connect", "tcp-listen"]
    }
  ]

}