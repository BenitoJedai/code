{
    "manifest_version": 2,
    "name": "ChromeWebviewFullscreen",
    "description": "ChromeWebviewFullscreen",
    "version": "51",
    "minimum_chrome_version": "40",
    "offline_enabled": true,



    "externally_connectable": {
        "ids": [
            "*"
        ]
    },


    "app": {

        "background": {
            "persistent": true,
            "scripts": [ "view-source" ]
        }
    },
    "icons": {
    },
  
  
  "permissions": [
     "app.window.alpha",
  "<all_urls>",
  "alwaysOnTopWindows",
  "webview",
  "fullscreen",
  "pointerLock",
    "unlimitedStorage",
	    "notifications",
		    "storage",
    {
      "socket": ["udp-send-to", "udp-bind", "udp-multicast-membership", "tcp-connect", "tcp-listen"]
    }
  ]

}