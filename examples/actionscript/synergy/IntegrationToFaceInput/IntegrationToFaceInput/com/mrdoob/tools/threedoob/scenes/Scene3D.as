package com.mrdoob.tools.threedoob.scenes {	import com.mrdoob.tools.threedoob.objects.DisplayObject3D;	import com.mrdoob.tools.threedoob.events.Scene3DEvent;	import com.mrdoob.tools.threedoob.utils.arrayRemoveItemByInstance;	import flash.events.EventDispatcher;	
	/**	 * @author mrdoob	 */	public class Scene3D extends EventDispatcher	{		public var objects : Array;		public function Scene3D()		{			objects = new Array();		}		// .. ADD		public function add( item : *, layer : int = 0 ) : void		{			if( item is DisplayObject3D )				addDisplayObject3D( item, layer );		}		public function addDisplayObject3D(item : DisplayObject3D, layer : int) : void		{			item.layer = layer;			objects.push( item );			dispatchEvent( new Scene3DEvent( Scene3DEvent.DISPLAYOBJECT3D_ADDED, item ) );		}		// .. REMOVE				public function remove( item : *, unload : Boolean = false ) : void		{			if( item is DisplayObject3D )				removeDisplayObject3D( item, unload );		}						public function removeDisplayObject3D(item : DisplayObject3D, unload : Boolean = false ) : void		{			arrayRemoveItemByInstance( objects, item );							dispatchEvent( new Scene3DEvent( Scene3DEvent.DISPLAYOBJECT3D_REMOVED, item ) );			if (unload) item.unload( );					}				public function clear( unload : Boolean = false ) : void		{			while (objects.length > 0)				removeDisplayObject3D( DisplayObject3D( objects[objects.length - 1] ), unload );		}	}}